<keymap version="1" name="Default for XWin copy" parent="Default for XWin">
  <action id="$Copy">
    <keyboard-shortcut first-keystroke="ctrl c" />
    <keyboard-shortcut first-keystroke="shift c" />
  </action>
  <action id="$Paste">
    <keyboard-shortcut first-keystroke="ctrl v" />
    <keyboard-shortcut first-keystroke="shift v" />
  </action>
  <action id="Editor Copy">
    <keyboard-shortcut first-keystroke="shift c" />
  </action>
  <action id="Editor Paste">
    <keyboard-shortcut first-keystroke="shift v" />
  </action>
</keymap>